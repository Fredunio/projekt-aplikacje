{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "app/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
