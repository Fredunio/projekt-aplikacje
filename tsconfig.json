{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES6",
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "web/source/script",
    "moduleResolution": "Node"
  },
  "include": [
    "web/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
